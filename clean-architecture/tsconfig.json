{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@use-cases/*": [
        "use-cases/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@main/*": [
        "main/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
